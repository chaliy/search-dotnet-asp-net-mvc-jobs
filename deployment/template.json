{
    "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "server_farm_name": {
            "defaultValue": "job-search-farm",
            "type": "String"
        },
        "region": {
            "defaultValue": "West US",
            "type": "String"
        },
        "site_name": {
            "defaultValue": "job-search",
            "type": "String"
        },
        "search_service_name": {
            "defaultValue": "job-search",
            "type": "String"
        },
        "search_service_api_key": {
            "type": "String"
        }
    },
    "variables": {},
    "resources": [
      {
          "type": "Microsoft.Web/serverfarms",
          "sku": "Free",
          "name": "[parameters('server_farm_name')]",
          "apiVersion": "2015-08-01",
          "location": "[resourceGroup().location]",
          "properties": {
              "name": "[parameters('server_farm_name')]",
              "numberOfWorkers": 1
          },
          "dependsOn": []
      },
      {
          "type": "Microsoft.Web/sites",
          "name": "[parameters('site_name')]",
          "apiVersion": "2015-08-01",
          "location": "[resourceGroup().location]",
          "properties": {
              "name": "[parameters('site_name')]",
              "serverFarmId": "[resourceId('Microsoft.Web/serverfarms', parameters('server_farm_name'))]"
          },
          "dependsOn": [
              "[resourceId('Microsoft.Web/serverfarms', parameters('server_farm_name'))]"
          ],
          "resources": [
           {
             "apiVersion": "2015-06-01",
             "name": "web",
             "type": "config",
             "dependsOn": [
               "[resourceId('Microsoft.Web/Sites', parameters('site_name'))]"
             ],
             "properties": {
               "phpVersion": "off",
               "netFrameworkVersion": "v4.5",
               "scmType": "LocalGit",
               "appSettings": [
                 {
                   "Name": "JOB_SEARCH_SERVICE_NAME",
                   "Value": "[parameters('search_service_name')]"
                 },
                 {
                   "Name": "JOB_SEARCH_API_KEY",
                   "Value": "[parameters('search_service_api_key')]"
                 }
               ]
             }
           },
           {
             "apiVersion": "2015-06-01",
             "name": "GoLang",
             "type": "siteextensions",
             "dependsOn": [
               "[resourceId('Microsoft.Web/Sites', parameters('site_name'))]",
               "[resourceId('Microsoft.Web/Sites/config', parameters('site_name'), 'web')]"
             ],
             "properties": { }
           }
         ]

      }
    ]
}
